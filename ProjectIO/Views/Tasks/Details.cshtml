    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="container">
    <h4>Timers</h4>
    <p>
        <a asp-controller="Timers" asp-action="Create" asp-route-taskId="@Model.Id">Create New</a>
    </p>
    <partial name="_Timers" model="@Model.Timers"/>
</div>
