@model IEnumerable<ProjectIO.Models.Timer>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(timers => timers.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StopTime)
        </th>
        <th>
            @Html.DisplayNameFor(timers => timers.Duration)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(timer => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StopTime)
            </td>
            <td>
                @Html.DisplayFor(timer => item.Duration)
            </td>
            <td>
                <a asp-controller="Timers" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Timers" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Timers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                @if (item.StopTime == null)
                {
                    <span> | </span>
                    <a asp-controller="Timers" asp-action="StopTimer" asp-route-id="@item.Id">Stop Timer</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
